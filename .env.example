DATABASE_URL=local.db

# Auth.js Secret - generate with: openssl rand -base64 32
AUTH_SECRET=your-auth-secret-here

# SCIM Token for provisioning endpoint authentication
# Generate with: openssl rand -base64 32
SCIM_TOKEN=your-scim-token-here

# Optional: Trust proxy headers (for Auth.js)
AUTH_TRUST_HOST=true

# ===========================================
# Development / Debug Settings
# ===========================================

# Enable debug authentication (only works in dev mode)
# Set to 'true' to use a mock user without reverse proxy
DEBUG_AUTH=true

# Debug user configuration (optional, defaults shown)
DEBUG_USER_ID=debug-user-id
DEBUG_USER_EMAIL=debug@localhost
DEBUG_USER_NAME=Debug User
DEBUG_USER_GROUPS=admin,users

# Group required for admin access
ADMIN_GROUP=admin
